{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
{{ form_start(form)}}


{% if form.prenom is defined and form.nom is defined%}
    <div class="formPrenom">
        {{ form_row(form.prenom) }}
    </div>
    <div class="formNom">
        {{ form_row(form.nom) }}
    </div>
{% endif %}


{% if form.roles is defined %}
    <div class="formRoles">
        {{ form_row(form.roles)}}
    </div>
{% endif %}


{% if form.age is defined %}
    <div class="formAge">
        {{ form_row(form.age) }}
    </div>
{% endif %}

{% if form.email is defined %}
    <div class"formEmail">
        {{ form_row(form.email) }}
    </div>
{% endif %}


{% if form.password is defined %}
    <div class="formPassword">
        {{ form_row(form.password) }}
    </div>
{% endif %}

{% if form.telephone is defined %}
    <div class="formTelephone">
        {{ form_row(form.telephone) }}
    </div>
{% endif %}


{% endblock %}